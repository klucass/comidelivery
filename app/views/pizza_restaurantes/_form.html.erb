<%= form_for 'pizza_restaurante/new', html: {class: "form-horizontal", role: "form"} do |f|%>
  <% if @pizza.errors.any? %>
    <div id="error_explanation">
      <h2><%= I18n.t('item.new.error_msg') %></h2>

      <ul>
      <% @pizza.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">

        <%= f.label :tamanho, 'Tamanho', class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :tamanho, class: 'form-control', placeholder: 'Escolha o tamanho desejado' %>
        </div>
        
  </div>
  
  
  <div class="form-group">
    
    <div class="col-sm-8">

     <%= submit_tag "Salvar produto", class: "btn btn-success btn-lg btn-block" %>

     </div>

  </div>
<% end %>