<div class="row">
  <div class="col-md-6">

<%= form_for @endereco, html: {class: "form-horizontal", role: "form"} do |f|%>
  <% if @endereco.errors.any? %>
    <div id="error_explanation">
      <h2><%= I18n.t('usuarios.new.error_msg') %></h2>

      <ul>
      <% @endereco.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">

        <%= f.label :nome, 'Nome', class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :nome, class: 'form-control', placeholder: 'Nome do endereço. Ex: casa' %>
        </div>
        
  </div>

  <div class="form-group">

        <%= f.label :estado, "Estado", class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :estado, class: 'form-control', placeholder: 'Estado' %>
        </div>
        
  </div>

  <div class="form-group">

        <%= f.label :cidade, "Cidade", class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :cidade, class: 'form-control', placeholder: 'Cidade' %>
        </div>
        
  </div>
  <div class="form-group">

        <%= f.label :logradouro, "Logradouro", class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :logradouro, class: 'form-control', placeholder: 'Rua' %>
        </div>
        
  </div>
  <div class="form-group">

        <%= f.label :endereco, "Endereco", class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :endereco, class: 'form-control', placeholder: 'Isaura Parente' %>
        </div>
        
  </div>
  <div class="form-group">

        <%= f.label :numero, "Número", class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :numero, class: 'form-control', placeholder: 'Numero da casa e/ou apartamento' %>
        </div>
        
  </div>

  <div class="form-group">

        <%= f.label :ponto_referencia, "Ponto de referência", class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :ponto_referencia, class: 'form-control', placeholder: 'Ex: Em frente ao posto' %>
        </div>
        
  </div>

  <div class="form-group">

        <%= f.label :cep, "CEP", class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :cep, class: 'form-control', placeholder: 'CEP' %>
        </div>
        
  </div>
  <div class="form-group">
    <div class="col-sm-4"></div>
    <div class="col-sm-8">

     <%= submit_tag "Cadastrar endereço", class: "btn btn-success btn-lg btn-block" %>

     </div>

  </div>
<% end %>

</div>
</div>