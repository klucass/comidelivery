
<% content_for :title do %> Dashboard <% end %>
<div class="row">

	<%= render 'menu' %>

	<div class="col-md-6">
      <h3>Informações</h3>
      <p><strong>Email do restaurante: </strong><%= @restaurante.usuario.email %></p>

      <p><strong>Telefone do restaurante: </strong><%= @restaurante.usuario.telefone %></p>

      <p><strong>Nome do usuário administrador: </strong><%= @restaurante.usuario.nome %></p>

      <p><strong>Endereco: </strong><%= @restaurante.usuario.try(:endereco).try(:endereco) %>, <%= @restaurante.usuario.try(:endereco).try(:numero) %> - <%= @restaurante.usuario.try(:endereco).try(:cidade) %></p>

      <hr>

      <h3>Editar dados</h3>
      <hr>


      <%= render 'form_edit_restaurante' %>



	</div>

</div>
